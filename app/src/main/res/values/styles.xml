<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/honbuncolor</item>
        <item name="background">@color/honbuncolor</item>
        <item name="titleTextStyle">@color/honbuncolor</item>
    </style>

    <style name="dialog">
        <item name="android:textColor">@color/honbuncolor</item>
        <item name="android:background">@color/bgcolor</item>
        <item name="android:padding">0sp</item>
    </style>

    <style name="dialog_contents">
        <item name="android:textColor">@color/honbuncolor</item>
        <item name="android:background">@color/honbuncolor</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="custom_textview">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5sp</item>
    </style>

    <style name="padding_main">
        <item name="android:padding">5sp</item>
    </style>

    <style name="radio">
        <item name="android:radius">60sp</item>
    </style>


    <style name="ZenkokuCheckBox" parent="Theme.AppCompat.Light">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/zenkokucolor</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/zenkokucolor</item>
    </style>

    <style name="KobetsuCheckBox" parent="Theme.AppCompat.Light">
        <!-- 枠線 -->
        <item name="colorControlNormal">@color/kobetsucolor</item>
        <!-- チェック時の色 -->
        <item name="colorControlActivated">@color/kobetsucolor</item>
    </style>

    <style name="KobetsuTextView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bgdeepcolor</item>
        <item name="android:textColor">@color/honbuncolor</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingLeft">20sp</item>
    </style>

    <style name="addInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/honbuncolor</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="Inner_addInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/honbuncolor</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
