<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/click_over"
    android:orientation="vertical"
    android:background="#F3F3F3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:longClickable="true">

    <LinearLayout
        android:id="@+id/click_over_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginBottom="5sp"
        >

        <LinearLayout
            android:layout_width="10sp"
            android:layout_height="match_parent">
        <TextView
        android:id="@+id/typecolor"
        android:layout_width="10sp"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"/>
        <!--全国と個別で色を変える-->
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10sp"
        android:padding="10sp"
        >
    <TextView
        android:text="2017/10/28"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

 <LinearLayout
     android:id="@+id/more"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:textColor="@color/honbuncolor"
        />


    <TextView
        android:text="東京ビッグサイト"
        android:id="@+id/location"
        android:textSize="23sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

         <ImageView
             android:id="@+id/ticket_icon"
             android:layout_width="30sp"
             android:layout_height="30sp"
             android:layout_toLeftOf="@id/col_ticket"
             android:layout_centerInParent="true"
             />

    <!--android:src="@drawable/ic_account_box_black_24dp"-->

         <TextView
             android:id="@+id/col_ticket"
             android:textSize="30dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"/>
</RelativeLayout>

</LinearLayout>


 </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>