<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mv_event"
    android:orientation="vertical"
    style="@style/padding_main">

    <LinearLayout
        android:id="@+id/click_over_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginBottom="5sp"
        >

        <LinearLayout
            android:layout_width="10sp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/typecolor"
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:background="@color/bgcolor"/>
            <!--全国と個別で色を変える-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp"
            android:layout_marginLeft="10sp"
            >
            <TextView
                android:id="@+id/date_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>


            <LinearLayout
                android:id="@+id/more_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/honbuncolor"
                        />


                    <TextView
                        android:id="@+id/location_event"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ticket_icon"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_toLeftOf="@+id/kari_col_ticket"
                            android:src="@drawable/ic_account_box_black_24dp"
                            />

                        <TextView
                            android:id="@+id/kari_col_ticket"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/slash"
                            android:visibility="gone"
                            android:text="30"/>

                        <TextView
                            android:id="@+id/slash"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/col_ticket"
                            android:visibility="gone"
                            android:text="/"/>

                        <TextView
                            android:id="@+id/col_ticket"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="30"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>







</LinearLayout>


