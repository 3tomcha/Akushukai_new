<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header"></include>

    <LinearLayout
        style="@style/addInner">

    <LinearLayout
        style="@style/Inner_addInner">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">
            <site.kobatomo.akushukai.CustomTextView
                android:text="@string/icon_busuu"
                style="@style/custom_textview"
                android:textSize="30sp"
                />

            <TextView
                android:text="レーン"
                style="@style/textview"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        <site.kobatomo.akushukai.CustomTextView
            android:text="@string/icon_member"
            style="@style/custom_textview"
            />

        <TextView
            android:text="メンバー"
            style="@style/textview"
            />
        </LinearLayout>

<RelativeLayout
    android:id="@+id/switchwrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <Switch
            android:id="@+id/switch1"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:showText="true"
            android:text="設定を行う"></Switch>


</RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:orientation="vertical">

        <Button
            android:id="@+id/member1"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_zenkoku_add_event"
            android:gravity="center"
            android:text="未選択"
            android:visibility="gone"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/member2"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_zenkoku_add_event"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="20sp"
            android:text="未選択"
            />
        <Button
            android:id="@+id/member3"
            android:gravity="center"

            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_zenkoku_add_event"
            android:visibility="gone"
            android:textSize="20sp"
            android:text="未選択"
            />
        <Button
            android:id="@+id/member4"
            android:gravity="center"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_zenkoku_add_event"
            android:visibility="gone"
            android:textSize="20sp"
            android:text="未選択"
            />
        </LinearLayout>









    <LinearLayout
        android:id="@+id/buttonadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>



    <LinearLayout
        style="@style/Inner_addInner">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <site.kobatomo.akushukai.CustomTextView
            android:text="@string/icon_ticket"
            style="@style/custom_textview"
            />
        <TextView
            android:text="枚数"
            style="@style/textview"
            />
        </LinearLayout>


<include layout="@layout/ticket_add_event"></include>






    </LinearLayout>

        <include layout="@layout/insertbutton"/>
    </LinearLayout>





</LinearLayout>
</LinearLayout>